<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_unique_id"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_r8_f5_border_d9_bg"
            android:gravity="center_vertical"
            android:hint="input unique id"
            android:lines="1"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/color_262626"
            android:textColorHint="@color/color_8C8C8C"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_nickname"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_r8_f5_border_d9_bg"
            android:gravity="center_vertical"
            android:hint="input nickname"
            android:lines="1"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/color_262626"
            android:textColorHint="@color/color_8C8C8C"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_unique_id" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_avatar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_r8_f5_border_d9_bg"
            android:gravity="center_vertical"
            android:hint="input avatar"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:text="https://d2vvute2v3y7pn.cloudfront.net/logo/Avalanche/0xe0bb6feD446A2dbb27F84D3C27C4ED8EA7603366.webp"
            android:textColor="@color/color_262626"
            android:textColorHint="@color/color_8C8C8C"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_nickname" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_email"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_r8_f5_border_d9_bg"
            android:gravity="center_vertical"
            android:hint="input email"
            android:lines="1"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/color_262626"
            android:textColorHint="@color/color_8C8C8C"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_avatar" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_dial"
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_r8_f5_border_d9_bg"
            android:gravity="center_vertical"
            android:hint="dial"
            android:lines="1"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/color_262626"
            android:textColorHint="@color/color_8C8C8C"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/et_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_email" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_r8_f5_border_d9_bg"
            android:gravity="center_vertical"
            android:hint="input phone"
            android:lines="1"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/color_262626"
            android:textColorHint="@color/color_8C8C8C"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/et_dial"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/et_dial"
            app:layout_constraintTop_toTopOf="@id/et_dial" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_r8_00d6e1_bg"
            android:gravity="center"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_dial" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
