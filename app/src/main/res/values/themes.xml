<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MPCWalletDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MPCWalletDemo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MPCWalletDemo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MPCWalletDemo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.WalletMain" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_FAFAFA</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:letterSpacing">0.02</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WalletDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:letterSpacing">0.02</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/barlowcondensed_medium</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="DappTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/barlowcondensed_medium</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="CommonDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--是否透明-->
        <item name="android:windowNoTitle">true</item><!--有无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景-->
        <item name="android:backgroundDimEnabled">true</item><!--是否模糊-->
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BottomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>